{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "jquery":true,
        "node": true,
        "qunit": true
    },
    "rules": {
        "no-extra-parens": "all",
        "valid-typeof": "true",

        "curly": "all",
        "no-else-return": 2,
        "no-extend-native": [2, {"exceptions": ["Object"]}],
        "no-extra-label": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,

        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "comma-style": [2, "last"],
        "keyword-spacing": {"before": true, "after": true},
        "new-parens"    : 2,
        "no-lonely-if": 2,
        "no-multiple-empty-lines": [2, {"max": 3, "maxBOF": 0,"maxEOF": 1}],
        "no-trailing-spaces": 2,
        "no-underscore-dangle": [2, { "allowAfterThis": true }],
        "semi": "error"
    }
}